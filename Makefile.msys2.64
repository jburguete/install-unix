MAKE = pacman -S
BASE = /usr/
BASE2 = /mingw64/
LIB = $(BASE2)lib
MINGW = mingw64/mingw-w64-x86_64-
compilers = $(BASE2)bin/gfortran.exe
repositories = $(BASE)bin/svn.exe
libraries = $(LIB)/libglut.a
edit = $(BASE)bin/vim.exe
debug = $(BASE)bin/gdb.exe
diff = $(BASE2)bin/meld
pdf = $(BASE2)bin/evince.exe
doxygen = $(BASE)bin/doxygen.exe
browser = $(BASE)bin/wget.exe
graphics = $(BASE)lib/gimp/2.0/plug-ins/ufraw-gimp

all: \
	$(compilers) \
	$(repositories) \
	$(libraries) \
	$(edit) \
	$(debug) \
	$(diff) \
	$(pdf) \
	$(doxygen) \
	$(browser) \
	$(graphics)

$(compilers):
	$(MAKE) autoconf automake make $(MINGW)gcc $(MINGW)gcc-fortran

$(repositories):
	$(MAKE) git subversion

$(libraries):
	$(MAKE) $(MINGW)libxml2 $(MINGW)glib2 $(MINGW)json-glib $(MINGW)sqlite3 \
		$(MINGW)gsl $(MINGW)gettext $(MINGW)gtk2 $(MINGW)gtk3 $(MINGW)freeglut

$(edit):
	$(MAKE) vim

$(debug):
	$(MAKE) gdb

$(diff):
	$(MAKE) $(MINGW)meld3

$(pdf):
	$(MAKE) $(MINGW)evince

$(doxygen):
	$(MAKE) doxygen

$(browser):
	$(MAKE) wget

$(graphics):
	$(MAKE) $(MINGW)imagemagick $(MINGW)gimp $(MINGW)gimp-ufraw

update:
	pacman -Syu

clean:
	pacman -Sc
