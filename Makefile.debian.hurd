MAKE = aptitude install
BASE = /usr/
BIN = $(BASE)bin/
compilers = $(BIN)gfortran
repositories = $(BIN)svn
libraries = $(BASE)include/SDL2/SDL.h
x = $(BIN)startxfce4
xutils = $(BIN)xfce4-screenshooter
edit = $(BIN)universalindentgui
math = $(BIN)xmaxima
debug = $(BIN)ddd
diff = $(BIN)meld
pdf = $(BIN)evince
doxygen = $(BIN)doxygen
browser = $(BIN)firefox-esr
mail = $(BIN)thunderbird
graphics = $(BASE)lib/gimp/2.0/plug-ins/ufraw-gimp
multimedia = $(BIN)parole
spam = $(BIN)spamassassin
office = $(BIN)loffice
flash =

all: \
	$(compilers) \
	$(repositories) \
	$(libraries) \
	$(x) \
	$(xutils) \
	$(edit) \
	$(math) \
	$(debug) \
	$(diff) \
	$(pdf) \
	$(doxygen) \
	$(browser) \
	$(mail) \
	$(graphics) \
	$(multimedia) \
	$(spam) \
	$(office) \
	$(flash)

$(compilers):
	$(MAKE) automake g++ gfortran

$(repositories):
	$(MAKE) git subversion

$(libraries):
	$(MAKE) libxml2-dev libglib2.0-dev libjson-glib-dev libsqlite3-dev \
		libgsl0-dev libgtk-3-dev freeglut3-dev \
		libglew-dev libglfw3-dev libsdl2-dev

$(x):
	$(MAKE) xserver-xorg-input-kbd xserver-xorg-input-mouse \
		xserver-xorg-video-vesa xorg xfce4
	sed -i 's/allowed_users=console/allowed_users=anybody/g' \
		/etc/X11/Xwrapper.config
	X -configure
	sed -i 's/auto/OSMouse/g' xorg.conf.new
	ln -s /root/xorg.conf.new /etc/X11/xorg.conf
	echo "Modify /etc/X11/xorg.conf"
	echo "In Section \"InputDevice\""
	echo "Add Option \"XkbOptions\" \"terminate:ctrl_alt_bkspace\""
	read
	vi /etc/X11/xorg.conf

$(xutils):
	$(MAKE) \
		xfce4-weather-plugin xfce4-xkb-plugin \
		xfce4-terminal xfce4-screenshooter \
	#xfce4-systemload-plugin xfce4-cpugraph-plugin xfce4-netload-plugin 

$(edit):
	$(MAKE) nedit vim-gtk universalindentgui

$(math):
	$(MAKE) galculator xmaxima

$(debug):
	$(MAKE) ddd

$(diff):
	$(MAKE) meld

$(pdf):
	$(MAKE) texlive-latex-extra texlive-publishers texlive-luatex \
		texlive-fonts-recommended texlive-lang-spanish texlive-lang-french \
		texlive-lang-english texlive-lang-italian evince

$(doxygen):
	$(MAKE) doxygen

$(browser):
	$(MAKE) wget firefox firefox-l10n-es-es xul-ext-adblock-plus

$(mail):
	$(MAKE) thunderbird thunderbird-l10n-es-es

$(graphics):
	$(MAKE) imagemagick gimp gimp-ufraw

$(multimedia):
	$(MAKE) parole

$(spam):
	$(MAKE) spamassassin

$(office):
	$(MAKE) libreoffice

update:
	aptitude update

upgrade:
	aptitude upgrade

clean:
	aptitude clean
