MAKE = aptitude install
BASE = /usr/
LIB = /usr/lib/i386-gnu/
compilers = $(BASE)bin/gfortran
repositories = $(BASE)bin/svn
x = /etc/X11/xorg.conf
libraries = $(LIB)/libglut.so.3
edit = $(BASE)bin/nedit
math = $(BASE)bin/xmaxima
debug = $(BASE)bin/ddd
pdf = $(BASE)bin/pdflatex
doxygen = $(BASE)bin/doxygen
browser = $(BASE)bin/w3m
mail =
graphics =
multimedia =
screensaver = $(BASE)bin/xscreensaver
office =
xplugins =
spam =
flash =

all: \
	$(compilers) \
	$(repositories) \
	$(libraries) \
	$(x) \
	$(xutils) \
	$(editors) \
	$(debug) \
	$(math) \
	$(pdf) \
	$(doxygen) \
	$(browser) \
	$(mail) \
	$(graphics) \
	$(multimedia) \
	$(office) \
	$(spam) \
	$(flash)

$(compilers):
	$(MAKE) automake gcc gfortran

$(repositories):
	$(MAKE) git subversion

$(libraries):
	$(MAKE) libxml2-dev libglib2.0-dev libsqlite3-dev libgsl0-dev \
		libgtk2.0-dev freeglut3-dev

$(x):
	$(MAKE) xserver-xorg-{input-{kbd,mouse},video-vesa} xorg icewm
	X -configure
	ln -s /root/xorg.conf.new /etc/X11/xorg.conf
	echo "Modify /etc/X11/xorg.conf"
	echo "In Section \"InputDevice\""
	echo "Add Option \"XkbOptions\" \"terminate:ctrl_alt_bkspace\""
	read
	vi /etc/X11/xorg.conf

$(xutils):
	$(MAKE) xscreensaver

$(editors):
	$(MAKE) nedit vim-gtk

$(debug):
	$(MAKE) ddd

$(math):
	$(MAKE) xmaxima

$(pdf):
	$(MAKE) latex-beamer texlive-latex-extra texlive-publishers xpdf

$(doxygen):
	$(MAKE) doxygen

$(browser):
	$(MAKE) w3m

update:
	aptitude update
	aptitude upgrade

clean:
	aptitude clean
